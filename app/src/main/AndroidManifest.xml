<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.splitpaymentapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplitPaymentApp" >
        <activity
            android:name=".view.PaymentActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".view.GroupActivity"
            android:launchMode="singleInstance"

            android:clearTaskOnLaunch="true"
            android:exported="false" />
        <activity android:name=".view.Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.Register" />
        <activity android:name=".view.MainActivity"
            android:launchMode="singleTask"

            android:clearTaskOnLaunch="true"
            />

    </application>

</manifest>